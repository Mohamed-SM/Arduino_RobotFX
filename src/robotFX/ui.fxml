<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="robotFX.uiController">
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="File">
               <MenuItem mnemonicParsing="false" text="Close"/>
           </Menu>
           <Menu mnemonicParsing="false" text="Edit">
               <MenuItem mnemonicParsing="false" text="Delete"/>
           </Menu>
           <Menu mnemonicParsing="false" text="Help">
               <MenuItem mnemonicParsing="false" text="About"/>
           </Menu>
       </MenuBar>
   </top>
   <left>
       <VBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="TOP_CENTER">
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
           </padding>
           <Slider fx:id="baseSlider" majorTickUnit="10.0" max="180.0" minorTickCount="1" showTickLabels="true"
                   showTickMarks="true" snapToTicks="true" value="90.0"/>
           <Label fx:id="baseLabel" text="Base"/>
           <Slider fx:id="shoulderSlider" majorTickUnit="10.0" max="180.0" min="90.0" minorTickCount="1"
                   showTickLabels="true" showTickMarks="true" snapToTicks="true" value="90.0"/>
           <Label fx:id="shoulderLabel" text="Shoulder"/>
           <Slider fx:id="elbowSlider" blockIncrement="1.0" majorTickUnit="10.0" max="180.0" min="45.0"
                   minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="90.0"/>
           <Label fx:id="elbowLabel" text="Elbow"/>
           <Slider fx:id="pinchSlider" majorTickUnit="10.0" max="180.0" min="120.0" minorTickCount="1"
                   showTickLabels="true" showTickMarks="true" snapToTicks="true" value="90.0"/>
           <Label fx:id="pinchLabel" text="Pinch"/>
           <HBox alignment="CENTER" spacing="5.0">
               <Button mnemonicParsing="false" onAction="#onMoveButtonClic" text="Move"/>
               <Button mnemonicParsing="false" onAction="#onSaveClick" text="save"/>
               <Button layoutX="85.0" layoutY="10.0" mnemonicParsing="false" onAction="#onSaveClickHere"
                       text="save here"/>
           </HBox>
           <HBox alignment="CENTER" layoutX="20.0" layoutY="337.0" spacing="5.0">
               <Button mnemonicParsing="false" onAction="#onPrevClick" text="&lt;"/>
               <Button mnemonicParsing="false" onAction="#onMoveToClick" text="Move To"/>
               <Button mnemonicParsing="false" onAction="#onNextClick" text="&gt;"/>
           </HBox>
       </VBox>
   </left>
   <bottom>
       <HBox alignment="CENTER" prefHeight="46.0" prefWidth="600.0" spacing="30.0" BorderPane.alignment="CENTER">
           <ComboBox fx:id="comBox" prefWidth="150.0" promptText="Select a port"/>
           <Button fx:id="connectionButton" mnemonicParsing="false" onAction="#onConnetClick" text="connection"/>
       </HBox>
   </bottom>
   <right>
       <AnchorPane prefHeight="325.0" prefWidth="400.0" BorderPane.alignment="CENTER">
           <VBox layoutX="166.0" layoutY="48.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
           </VBox>
       </AnchorPane>
   </right>
   <center>
       <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <TableView fx:id="poseTable" layoutY="38.0" prefHeight="325.0" prefWidth="232.0"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
               <columns>
                   <TableColumn fx:id="poseNameColumn" prefWidth="75.0" text="Pose"/>
                   <TableColumn fx:id="poseBaseColumn" prefWidth="75.0" text="base"/>
                   <TableColumn fx:id="poseShoulderColumn" prefWidth="75.0" text="shoulder"/>
                   <TableColumn fx:id="poseElbowColumn" prefWidth="75.0" text="elbow"/>
                   <TableColumn fx:id="posePinchColumn" prefWidth="75.0" text="pinch"/>
               </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
           </TableView>
       </AnchorPane>
   </center>
</BorderPane>
